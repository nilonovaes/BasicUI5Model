<mvc:View 
    xmlns="sap.m" 
    xmlns:core="sap.ui.core" 
    xmlns:mvc="sap.ui.core.mvc" controllerName="ModelUI5.controller.Faces">
    <Page title="E-IT Birthday" enableScrolling="true" showHeader="true" class="sapMGlobalBackgroundImage sapMGlobalBackgroundColor myRootPage ">
        <customHeader>
            <Bar class="myEitBar">
                <contentLeft>
                    <Image height="75%" src="images/eitlogo.png"/>
                </contentLeft>
                <contentMiddle class="whiteColor">
                    <Text text = "{months>month}" ></Text>
                </contentMiddle>
                <contentRight>
                    <Button type="Accept" icon="sap-icon://action-settings" press="onPress" ></Button>
                </contentRight>
            </Bar>
        </customHeader>
        <content>
            <Panel expandable="false" content="{birthdays>/Birthdays}">
                <content>
                    <SlideTile class="sapUiTinyMarginBegin sapUiTinyMarginTop">
                        <GenericTile backgroundImage="{birthdays>image}" frameType="{birthdays>isBirthday}">
                            <TileContent footer="{birthdays>date}">
                                <NewsContent contentText="{birthdays>name}" subheader="{birthdays>position}" />
                            </TileContent>
                        </GenericTile>
                        <GenericTile backgroundImage="{birthdays>image}" frameType="{birthdays>isBirthday}"></GenericTile>
                    </SlideTile>
                </content>
            </Panel>
        </content>
    </Page>
</mvc:View>
<mvc:View 
    xmlns="sap.m" 
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc" 
    controllerName="ModelUI5.controller.Adm">

    <Page title="E-IT Birthday" enableScrolling="true" showHeader="true" class="sapMGlobalBackgroundImage sapMGlobalBackgroundColor myRootPage ">
        <customHeader>
            <Bar class="myEitBar">
                <contentLeft>
                    <Image height="75%" src="images/eitlogo.png"/>
                </contentLeft>
                <contentMiddle class="whiteColor">
                    <Text text = "E-IT Birthday"></Text>
                </contentMiddle>
                <contentRight>
                    <Button type="Accept" icon="sap-icon://home" press="onNavPress"></Button>
                </contentRight>
            </Bar>
        </customHeader>
        <content>
            <Table id="table" items="{ path: 'birthdays>/Birthdays',
                         sorter: {
                            path: 'name'
                         } }">
                <columns>
                    <Column>
                        <header>
                            <Text text="{i18n>name}" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Text text="{i18n>date}" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Text text="{i18n>position}" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Text text="{i18n>image}" />
                        </header>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem type="Navigation" press="onPress">
                        <cells>
                            <ObjectIdentifier title="{birthdays>name}"/>
                            <ObjectIdentifier title="{birthdays>date}"/>
                            <ObjectIdentifier title="{birthdays>position}"/>

                            <ObjectStatus 
                                icon="{= ${produto>image} === '' ? 'sap-icon://message-success' : 
                                         ${produto>image} === '' ? 'sap-icon://message-warning' : 'sap-icon://message-error' }"

                                />

                            <!-- <ObjectIdentifier title="{birthdays>image}"/> -->
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>